<div class="container">
  <h1 class="fw-bold">My tasks</h1>

  <div class="mb-3">
    <ul class="list-group">
      <% @tasks.each do |task| %>
        <li class="list-group-item">
          <div class="form-check">
            <%= check_box_tag "task_#{task.id}_completed", task.id, task.completed, class: "form-check-input", id: "task_#{task.id}" %>
            <label class="form-check-label" for="flexCheckChecked">
              <%= link_to task.title, task_path(task.id), class: "text-decoration-none" %>
            </label>
            <%= link_to destroy_task_path(task),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "text-decoration-none" do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="d-flex align-items-center">
    <i class="fa-solid fa-plus"></i>
    <%= link_to "Add a new task", new_task_path, class: "text-decoration-none" %>
  </div>

</div>
